# =============================================================================
# Reasoning Agents Framework - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# Your OpenAI API key or compatible provider key
API_KEY="your-api-key-here"

# Model to use (e.g., gpt-4o-mini, gpt-4, claude-3-sonnet, etc.)
MODEL="openai/gpt-oss-20b"

# Temperature for model responses (0 = deterministic, 1 = creative)
TEMPERATURE=0

# Optional: Custom API endpoint (for local models or proxy)
# Leave empty to use default OpenAI endpoint
# example 
# BASE_URL="https://openrouter.ai/api/v1"
BASE_URL=""

# -----------------------------------------------------------------------------
# Agent Configuration (Optional - defaults shown)
# -----------------------------------------------------------------------------
# Manager Agent URL
MANAGER_AGENT_URL="http://localhost:8100"

# Worker Agent URLs
CLAUSE_AGENT_URL="http://localhost:8101"
COMPLIANCE_AGENT_URL="http://localhost:8102"

# -----------------------------------------------------------------------------
# MCP Tool Configuration (Optional - defaults shown)
# -----------------------------------------------------------------------------
# Contract Query Tool
CONTRACT_TOOL_PORT=11001

# Rules Engine Tool  
RULES_TOOL_PORT=11002

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL="INFO"
